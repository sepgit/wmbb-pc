.gotop
  position fixed
  right 50px
  bottom 50px
  height 100px
  width 60px

.gotop1
  height 50px
  width 60px
  text-align center
  background-color #FFFFFF
  border-radius 15px
  overflow hidden
  float left
  font-size 20px
  line-height 20px
  margin 0 0 10px 0
  padding 3px 8px 3px 8px
  color #000000
  border 2px solid #888888

.gotop1:hover
  background-color lightblue

.gotop2
  position relative
  display inline-block
  height 50px
  width 60px
  text-align center
  padding-top 20px
  background-color lightblue
  border-radius 15px
  overflow hidden
  float left

.gotop2:hover:before
  top 50%

.gotop2:hover
  .gotop-in
    visibility hidden

.gotop2:before
  position absolute
  top -50%
  left 50%
  transform translate(-50%,-50%)
  content '回到顶部'
  width 50px
  color peru
  font-weight bold

.gotop-in
  visibility visible
  display inline-block
  height 20px
  width 20px
  border 3px solid black
  border-color white transparent transparent white
  transform rotate(45deg)

.gotop3
  text-align center
  cursor pointer

.gotop5
  float left
  width 150px
  height 150px
  margin 0 10px 0 10px
  a
    display inline-block
    width 150px
    height 50px
    float left
    color #000000

.gotop6
  display inline-block
  height 25px
  line-height 25px
  font-weight normal
  font-size 14px
  overflow hidden
  float left

.gotop7
  display inline-block
  height 25px
  line-height 25px
  font-size 12px
  overflow hidden
  text-align center
  float left

.gotop4
  height 150px
  width 150px